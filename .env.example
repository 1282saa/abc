# BigKinds API 키 설정
# 일반 키 (모든 언론사 접근 가능, 오늘의 이슈 API 사용)
BIGKINDS_KEY_GENERAL=your-bigkinds-general-api-key
# 서울경제 전용 키 (기사 본문 전체 접근 가능)
BIGKINDS_KEY_SEOUL=your-bigkinds-seoul-api-key

# 하위 호환성을 위한 기본 키 (일반 키와 동일)
BIGKINDS_KEY=your-bigkinds-general-api-key
OPENAI_API_KEY=your-openai-api-key

# 주식/경제 데이터 API 키
KIS_APP_KEY=your-kis-app-key
KIS_APP_SECRET=your-kis-app-secret
KIS_BASE_URL=https://openapivts.koreainvestment.com:29443
DART_API_KEY=your-dart-api-key
NEWS_API_KEY=your-news-api-key

# 서버 설정
HOST=0.0.0.0
PORT=8000  # 로컬 개발 환경 기본 포트

# 데이터베이스 설정
VECTOR_DB_PATH=./cache/vectordb
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=ainova

# 로깅 설정
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# 모델 설정
EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.3

# 성능 설정
MAX_RETRIES=3
REQUEST_TIMEOUT=30
CACHE_TTL=3600